{
  "name": "js-tail-recursion-opt-plugin",
  "version": "1.0.0",
  "description": "A modern TypeScript/JavaScript compiler plugin for automatic tail call optimization",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
