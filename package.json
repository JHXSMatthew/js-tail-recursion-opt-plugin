    "benchmark:full": "npm run build && node benchmark/suite.js",
    "benchmark:report": "npm run build && node benchmark/visualize.js > PERFORMANCE.md",
    "prepublishOnly": "npm run build && npm test",
    "prepare": "npm run build"
  },
  "keywords": [
    "babel-plugin",
    "tail-call-optimization",
    "tail-recursion",
    "optimization",
    "compiler",
    "typescript",
    "javascript",
    "functional-programming",
    "recursion",
    "performance",
    "stack-overflow",
    "tco"
  ],
  "author": "Matthew <JHXSMatthew@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JHXSMatthew/js-tail-recursion-opt-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/JHXSMatthew/js-tail-recursion-opt-plugin/issues"
  },
  "homepage": "https://github.com/JHXSMatthew/js-tail-recursion-opt-plugin#readme",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.24.0",
    "@types/babel__core": "^7.20.5",
    "@types/babel__traverse": "^7.20.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@babel/helper-plugin-utils": "^7.24.0",
    "@babel/template": "^7.24.0",
    "@babel/traverse": "^7.24.0",
    "@babel/types": "^7.24.0"
  },
  "files": [
    "dist"
  ]
